<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>checkLogin</servlet-name>
        <servlet-class>app.servlets.CheckLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IncorrectLogin</servlet-name>
        <servlet-class>app.servlets.mainPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncorrectLogin</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>app.servlets.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>welcomePage</servlet-name>
        <servlet-class>app.servlets.WelcomePage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcomePage</servlet-name>
        <url-pattern>/welcomePage</url-pattern>
    </servlet-mapping>

</web-app>